<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WatchFlowers.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WatchFlowers"
    Shell.FlyoutBehavior="Disabled"
    Title="WatchFlowers"
    BackgroundColor="White"
    Shell.BackgroundColor="#56B185"
    Shell.TabBarBackgroundColor="#56B185"
    Shell.TabBarForegroundColor="Black"
    Shell.TabBarTitleColor="Black">
    
    <TabBar>
        <Tab Title="Растения" Icon="myplants">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Добавить" Icon="addplant">
            <ShellContent ContentTemplate="{DataTemplate local:AddGarden}"/>
        </Tab>
        <Tab Title="Справочник" Icon="bestiary">
            <ShellContent ContentTemplate="{DataTemplate local:Bestiary}"/>
        </Tab>
        <Tab Title="Настройки" Icon="settings">
            <ShellContent ContentTemplate="{DataTemplate local:Settings}"/>
        </Tab>
    </TabBar>
</Shell>
